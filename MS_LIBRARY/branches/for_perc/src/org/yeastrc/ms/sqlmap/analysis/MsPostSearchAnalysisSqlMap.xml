<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
      "http://ibatis.apache.org/dtd/sql-map-2.dtd"> 
<sqlMap namespace="MsPostSearchAnalysis"> 

    <typeAlias alias="MsSearchAnalysisOut" type="org.yeastrc.ms.domain.postsearch.impl.PostSearchAnalysisBean"/>
    <typeAlias alias="MsSearchAnalysisIn" type="org.yeastrc.ms.domain.postsearch.impl.PostSearchAnalysisBean"/>
	
	<typeAlias alias="ProgramType" type="org.yeastrc.ms.domain.search.SearchProgram"/>
	<typeAlias alias="ProgramTypeHandler" type="org.yeastrc.ms.dao.search.ibatis.MsSearchDAOImpl$SearchProgramTypeHandler"/>
	
	<resultMap class="MsSearchAnalysisOut" id="msAnalysisResult">
		<result property="id" column="id" />
		<result property="searchId" column="searchID" />
		<result property="serverDirectory" column="serverDirectory" />
		<result property="analysisProgram" column="analysisProgramName" 
				typeHandler="ProgramTypeHandler"/>
		<result property="analysisProgramVersion" column="analysisProgramVersion" />
		<result property="uploadDate" column="uploadDate" />
	</resultMap>
	
	<parameterMap class="MsSearchAnalysisIn" id="msAnalysisParam">
		<parameter property="searchId" />
		<parameter property="serverDirectory"  />
		<parameter property="searchProgram" typeHandler="ProgramTypeHandler"/>
		<parameter property="searchProgramVersion"/>
	</parameterMap>
	
	
    <select id="select" resultMap="msAnalysisResult" parameterClass="Integer">
    	SELECT * FROM msPostSearchAnalysis WHERE id = #id#
    </select>
    
    <select id="selectAnalysisIdsForSearch" resultClass="Integer" parameterClass="Integer">
    	SELECT id FROM msPostSearchAnalysis WHERE searchID = #searchId#
    </select>
    
    <insert id="insert" parameterMap="msAnalysisParam">
    	INSERT INTO msPostSearchAnalysis (
    	searchID,
    	serverDirectory,
    	analysisProgramName,
    	analysisProgramVersion)
    	VALUES (?,?,?,?)
    	<selectKey resultClass="int">
      		select last_insert_id() as id
    	</selectKey>
    </insert>
    
    
    <update id="updateAnalysisProgramVersion" parameterClass="java.util.Map">
    	UPDATE msPostSearchAnalysis
    	SET analysisProgramVersion=#analysisProgramVersion#
    	WHERE id=#searchId#
    </update>
    
    <parameterMap class="java.util.Map" id="updateProgParam">
		<parameter property="searchId"  />
		<parameter property="analysisProgram" typeHandler="ProgramTypeHandler"/>
	</parameterMap>
	
    <update id="updateAnalysisProgram" parameterMap="updateProgParam">
    	UPDATE msPostSearchAnalysis
    	SET analysisProgramName=#analysisProgram#
    	WHERE id=#searchId#
    </update>
    
    <delete id="delete" parameterClass="Integer">
		DELETE FROM msPostSearchAnalysis WHERE id=#id#		    
    </delete>
    
</sqlMap>