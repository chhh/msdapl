<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE sqlMapConfig PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN" 
	"http://ibatis.apache.org/dtd/sql-map-config-2.dtd" > 

<sqlMapConfig>

	<properties resource="msDataDB.properties" />
	
	<settings 
		useStatementNamespaces="true"
		lazyLoadingEnabled="true"
	/>
	
	<transactionManager type="JDBC">
		<dataSource type="SIMPLE"> 
      		<property name="JDBC.Driver" 
                value="${db.driver}"/> 
      		<property name="JDBC.ConnectionURL" 
                value="${db.url}"/> 
      		<property name="JDBC.Username" 
                value="${db.user}"/> 
      		<property name="JDBC.Password" 
                value="${db.password}"/> 
    	</dataSource>
	</transactionManager>
	
	<!-- Related to experiments and runs -->
	<sqlMap resource="org/yeastrc/ms/sqlmap/MsEnzymeSqlMap.xml"/>
	<sqlMap resource="org/yeastrc/ms/sqlmap/MsScanSqlMap.xml"/>
	<sqlMap resource="org/yeastrc/ms/sqlmap/MsRunSqlMap.xml"/>
	<sqlMap resource="org/yeastrc/ms/sqlmap/MsExperimentSqlMap.xml"/>

	
	<!-- Related to peptide searches -->
	<sqlMap resource="org/yeastrc/ms/sqlmap/MsSearchDatabaseSqlMap.xml"/>
	<sqlMap resource="org/yeastrc/ms/sqlmap/MsSearchResultProteinSqlMap.xml" />
	<sqlMap resource="org/yeastrc/ms/sqlmap/MsSearchModificationSqlMap.xml" />
	<sqlMap resource="org/yeastrc/ms/sqlmap/MsSearchResultSqlMap.xml" />
	<sqlMap resource="org/yeastrc/ms/sqlmap/MsSearchSqlMap.xml" />

	
	<!-- Related to MS2 files -->
	<sqlMap resource="org/yeastrc/ms/sqlmap/ms2File/MS2HeaderSqlMap.xml"/>
	<sqlMap resource="org/yeastrc/ms/sqlmap/ms2File/MS2ChargeIndependentAnalysisSqlMap.xml"/>
	<sqlMap resource="org/yeastrc/ms/sqlmap/ms2File/MS2ChargeDependentAnalysisSqlMap.xml"/>
	<sqlMap resource="org/yeastrc/ms/sqlmap/ms2File/MS2ScanChargeSqlMap.xml"/>
	<sqlMap resource="org/yeastrc/ms/sqlmap/ms2File/MS2ScanSqlMap.xml"/>


	<!-- Related to SQT files -->
	<sqlMap resource="org/yeastrc/ms/sqlmap/sqtFile/SQTHeaderSqlMap.xml"/>
	<sqlMap resource="org/yeastrc/ms/sqlmap/sqtFile/SQTSearchScanSqlMap.xml"/>
	<sqlMap resource="org/yeastrc/ms/sqlmap/sqtFile/SQTSearchResultSqlMap.xml"/>


</sqlMapConfig>	