<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
      "http://ibatis.apache.org/dtd/sql-map-2.dtd"> 
<sqlMap namespace="MsSearch"> 

    <typeAlias alias="MsSearchDb" type="org.yeastrc.ms.domain.search.impl.MsSearchDbImpl"/>
    <typeAlias alias="MsSearch" type="org.yeastrc.ms.domain.search.MsSearch"/>
	
	<resultMap class="MsSearchDb" id="msSearchResult">
		<result property="id" column="id" />
		<result property="searchDate" column="expDate" />
		<result property="serverAddress" column="serverAddress" />
		<result property="serverDirectory" column="serverDirectory" />
		<result property="analysisProgramName" column="analysisProgramName" />
		<result property="analysisProgramVersion" column="analysisProgramVersion" />
		<result property="uploadDate" column="uploadDate" />
		<result property="enzymeList" 
				column="id" 
				select="MsEnzyme.selectEnzymesForSearch"/>
		<result property="searchDatabases" 
				select="MsDatabase.selectSearchDatabases" 
				column="id"/>
		<result property="staticResidueMods" 
				select="selectStaticResidueModsForSearch" 
				column="id" />
		<result property="dynamicResidueMods" 
				select="selectDynamicResidueModsForSearch" 
				column="id" />
		<result property="staticTerminalMods" 
				select="selectStaticTerminalModsForSearch" 
				column="id" />
		<result property="dynamicTerminalMods" 
				select="selectDynamicTerminalModsForSearch" 
				column="id" />
	</resultMap>
	
	<parameterMap class="MsSearch" id="msSearchParam">
		<parameter property="id" jdbcType="INTEGER"/>
		<parameter property="searchDate" jdbcType="DATE" />
		<parameter property="serverAddress" jdbcType="VARCHAR" />
		<parameter property="serverDirectory" jdbcType="VARCHAR" />
		<parameter property="analysisProgramName" jdbcType="VARCHAR" />
		<parameter property="analysisProgramVersion" jdbcType="VARCHAR"/>
		<parameter property="uploadDate" jdbcType="DATE" />
	</parameterMap>
	
	
    <select id="select" resultMap="msSearchResult" parameterClass="Integer">
    	SELECT * FROM msSearch WHERE id = #id#
    </select>
    
    
    <insert id="insert" parameterMap="msSearchParam">
    	INSERT INTO msSearch (
    	expDate,
    	serverAddress,
    	serverDirectory,
    	analysisProgramName,
    	analysisProgramVersion)
    	VALUES (?,?,?,?,?)
    	<selectKey resultClass="int">
      		select last_insert_id() as id
    	</selectKey>
    </insert>
    
    <delete id="delete" parameterClass="Integer">
		DELETE FROM msSearch WHERE id=#id#		    
    </delete>
    
    <update id="updateAnalysisProgramVersion" parameterClass="java.util.Map">
    	UPDATE msSearch
    	SET analysisProgramVersion="#analysisProgramVersion#"
    	WHERE id=#searchId#
    </update>
</sqlMap>