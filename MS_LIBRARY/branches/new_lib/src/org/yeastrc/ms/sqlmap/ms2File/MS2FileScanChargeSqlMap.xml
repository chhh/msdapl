<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
      "http://ibatis.apache.org/dtd/sql-map-2.dtd"> 
<sqlMap namespace="scanCharge"> 

	<typeAlias alias="scanCharge" type="org.yeastrc.ms.dto.ms2File.Ms2FileScanCharge"/>
	
	<resultMap class="scanCharge" id="scanChargeResult">
		<result property="id" column="id" />
		<result property="scanId" column="scanID" />
		<result property="charge" column="charge" />
		<result property="mass" column="mass" />
	</resultMap>
	
	<parameterMap class="scanCharge" id="scanChargeParam">
		<parameter property="scanId" jdbcType="INTEGER"/>
		<parameter property="charge" jdbcType="INTEGER" nullValue="-1"/>
		<parameter property="mass" jdbcType="DECIMAL" />
	</parameterMap>
	
    <select id="selectChargesForScan" resultMap="scanChargeResult"> 
        SELECT * FROM MS2FileScanCharge WHERE scanID=#scanId#
    </select> 
    
    <select id="select" resultMap="scanChargeResult" parameterClass="Integer">
    	SELECT * FROM MS2FileScanCharge WHERE id= #id#
    </select>
    
    <insert id="insert" parameterMap="scanChargeParam">
    	INSERT INTO MS2FileScanCharge (scanID, charge, mass) VALUES (?,?,?)
    	<selectKey resultClass="int" keyProperty="id">
      		select last_insert_id() as id
    	</selectKey>
    </insert>
    
    <delete id="deleteById" parameterClass="Integer">
		DELETE FROM MS2FileScanCharge WHERE id=#id#		    
    </delete>
    
    <delete id="deleteByScanId" parameterClass="Integer">
		DELETE FROM MS2FileScanCharge WHERE scan=#scanId#		    
    </delete>
    
</sqlMap>