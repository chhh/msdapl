<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
      "http://ibatis.apache.org/dtd/sql-map-2.dtd"> 
<sqlMap namespace="MS2Header"> 

	<typeAlias alias="HeaderDb" type="org.yeastrc.ms.domain.ms2File.impl.MS2HeaderDbImpl"/>
	<typeAlias alias="Header" type="org.yeastrc.ms.dao.ms2File.ibatis.MS2HeaderDAOImpl$MS2HeaderSqlMapParam"/>
	
	<resultMap class="HeaderDb" id="headerResult">
		<result property="id" column="id" />
		<result property="runId" column="runID" />
		<result property="name" column="header" />
		<result property="value" column="value" />
	</resultMap>
	
	<parameterMap class="Header" id="headerParam">
		<parameter property="runId" jdbcType="INTEGER" nullValue="0" />
		<parameter property="name" jdbcType="VARCHAR"/>
		<parameter property="value" jdbcType="VARCHAR"/>
	</parameterMap>
	
    <select id="selectHeadersForRun" resultMap="headerResult" parameterClass="Integer"> 
        SELECT * FROM MS2FileHeader where runID=#id#
    </select> 
    
    <insert id="insert" parameterMap="headerParam">
    	INSERT INTO MS2FileHeader (runID, 
    						header, 
    						value) 
    	VALUES (?,?,?)
    </insert>
    
    <delete id="deleteByRunId" parameterClass="Integer">
		DELETE FROM MS2FileHeader WHERE runID=#runId#		    
    </delete>
    
    <delete id="deleteByRunIds" parameterClass="java.util.Map">
		DELETE FROM MS2FileHeader
		<iterate property="runIdList"
    			open="WHERE runID IN("
    			close=")"
    			conjunction=","
    			>
    			#runIdList[]#
    		</iterate>
    </delete>
    
</sqlMap>