<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
      "http://ibatis.apache.org/dtd/sql-map-2.dtd"> 
<sqlMap namespace="MsRunLocation"> 

	<typeAlias alias="MsRunLocationDb" type="org.yeastrc.ms.domain.run.impl.MsRunLocationDbImpl" />
	
	<resultMap class="MsRunLocationDb" id="msRunLocationResult">
		<result property="id" column="id" />
		<result property="runId" column="runID" nullValue="0"/>
		<result property="createDate" column="createDate" />
		<result property="serverAddress" column="serverAddress" />
		<result property="serverDirectory" column="serverDirectory" />
	</resultMap>
	
	<parameterMap class="MsRunLocationDb" id="msRunLocationParam">
		<parameter property="runId" jdbcType="INTEGER" nullValue="0" />
		<parameter property="serverAddress" jdbcType="VARCHAR"/>
		<parameter property="serverDirectory" jdbcType="VARCHAR"/>
	</parameterMap>
	
    
    <select id="select" resultMap="msRunLocationResult" parameterClass="Integer">
    	SELECT * FROM msRunLocation WHERE id = #id#
    </select>
    
    <select id="selectLocationsForRun" resultMap="msRunLocationResult" parameterClass="Integer">
    	SELECT * FROM msRunLocation WHERE runID=#runId#
    </select>
    
     <select id="selectMatchingLocations" resultMap="msRunLocationResult" parameterClass="MsRunLocation">
    	SELECT * FROM msRunLocation 
    	WHERE runID=#runId#
    	AND serverAddress=#serverAddress#
    	AND serverDirectory=#serverDirectory#
    </select>
    
    <insert id="insert" parameterMap="msRunLocationParam">
    	INSERT INTO msRunLocation (runID, serverAddress, serverDirectory) VALUES (?,?,?)
    </insert>
    
</sqlMap>