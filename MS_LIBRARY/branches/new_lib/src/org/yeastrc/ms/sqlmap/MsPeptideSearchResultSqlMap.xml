<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
      "http://ibatis.apache.org/dtd/sql-map-2.dtd"> 
<sqlMap namespace="MsSearchResult"> 

	<typeAlias alias="MsSearchResult" type="org.yeastrc.ms.dto.MsPeptideSearchResult"/>
	<typeAlias alias="MsSearchResultPeptide" type="org.yeastrc.ms.dto.MsSearchResultPeptide" />
	
	<resultMap class="MsSearchResult" id="msSearchResult">
		<result property="id" column="id" />
		<result property="searchId" column="searchID" />
		<result property="scanId" column="scanID" />
		<result property="charge" column="charge" />
		<result property="calculatedMass" column="calculatedMass" />
		<result property="numIonsMatched" column="matchingIons" nullValue="0"/>
		<result property="numIonsPredicted" column="predictedIons" nullValue="0"/>
		<result property="validationStatusString" column="validationStatus" javaType="java.lang.String" nullValue=""/>
		<result property="resultPeptide" resultMap="msSearchResultPeptideResult" />
		<result property="proteinMatchList" 
				select="MsResultProtein.selectResultProteins" 
				column="id"/>
	</resultMap>
	
	<resultMap class="MsSearchResultPeptide" id="msSearchResultPeptideResult">
		<result property="peptideSequence" column="peptide" />
		<result property="preResidueString" column="preResidue" javaType="java.lang.String" nullValue=""/>
		<result property="postResidueString" column="postResidue" javaType="java.lang.String" nullValue=""/>
		<result property="staticModifications" 
				select="MsSearchMod.selectStaticModsForSearch" 
				column="searchID" />
		<result property="dynamicModifications"
				select="MsSearchMod.selectDynaModsForSearchResult"
				column="id" />
	</resultMap>
	
	<parameterMap class="java.util.Map" id="msSearchResultParam">
		<parameter property="searchId" jdbcType="INTEGER" nullValue="0"/>
		<parameter property="result.scanId" jdbcType="INTEGER" nullValue="0"/>
		<parameter property="result.charge" jdbcType="TINYINT" nullValue="0"/>
		<parameter property="result.peptide" jdbcType="VARCHAR"/>
		<parameter property="result.calculatedMass" jdbcType="DECIMAL" />
		<parameter property="result.numIonsMatched" jdbcType="INTEGER" nullValue="0"/>
		<parameter property="result.numIonsPredicted" jdbcType="INTEGER" nullValue="0"/>
		<parameter property="result.preResidueString" jdbcType="CHAR" nullValue=""/>
		<parameter property="result.postResidueString" jdbcType="CHAR" nullValue=""/>
		<parameter property="result.validationStatusString" jdbcType="CHAR" nullValue=""/>
	</parameterMap>
	
    <select id="select" resultMap="msSearchResult" parameterClass="Integer">
    	SELECT * FROM msPeptideSearchResult WHERE id = #id#
    </select>
    
     <select id="selectResultIdsForSearch" resultClass="Integer" parameterClass="Integer">
    	SELECT id FROM msPeptideSearchResult WHERE searchID = #id#
    </select>
    
    
    <insert id="insert" parameterMap="msSearchResultParam">
    	INSERT INTO msPeptideSearchResult (
    	searchID,
    	scanId,
    	charge,
    	peptide,
    	calculatedMass,
    	matchingIons,
    	predictedIons,
    	preResidue,
    	postResidue,
    	validationStatus) 
    	VALUES (?,?,?,?,?,?,?,?,?,?)
    	<selectKey resultClass="int" keyProperty="id">
      		select last_insert_id() as id
    	</selectKey>
    </insert>
    
    <delete id="delete" parameterClass="Integer">
		DELETE FROM msPeptideSearchResult WHERE id=#id#		    
    </delete>
    
</sqlMap>