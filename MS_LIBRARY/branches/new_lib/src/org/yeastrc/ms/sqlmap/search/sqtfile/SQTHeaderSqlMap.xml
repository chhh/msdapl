<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
      "http://ibatis.apache.org/dtd/sql-map-2.dtd"> 
<sqlMap namespace="SqtHeader"> 


	<typeAlias alias="SqtHeaderOut" type="org.yeastrc.ms.domain.search.sqtfile.impl.SQTHeaderDbImpl"/>
	<typeAlias alias="SqtHeaderIn" type="org.yeastrc.ms.domain.search.sqtfile.SQTHeaderDb"/>
	
	
	<resultMap class="SqtHeaderOut" id="headerResult">
		<result property="id" column="id"/>
		<result property="searchId" column="searchID" nullValue="0"/>
		<result property="name" column="header"/>
		<result property="value" column="value"/>
	</resultMap>
	
	<parameterMap class="SqtHeaderIn" id="headerParam">
		<parameter property="searchId" jdbcType="INTEGER" nullValue="0"/>
		<parameter property="name" jdbcType="VARCHAR"/>
		<parameter property="value" jdbcType="VARCHAR"/>
	</parameterMap>
	
    
    <select id="selectHeadersForSearch" resultMap="headerResult" parameterClass="Integer">
		SELECT * FROM SQTSearchHeader WHERE searchID = #id#
	</select>
	
    
    <insert id="insertHeader" parameterMap="headerParam">
    	INSERT INTO SQTSearchHeader (searchID, header, value) 
    	VALUES (?,?,?)
    </insert>
    
    
    <delete id="deleteHeadersForSearch" parameterClass="Integer">
		DELETE FROM SQTSearchHeader WHERE searchID=#id#
    </delete>
    
</sqlMap>