<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
      "http://ibatis.apache.org/dtd/sql-map-2.dtd"> 
<sqlMap namespace="MS2ChgIAnalysis"> 

	<typeAlias alias="Ianalysis" type="org.yeastrc.ms.dto.ms2File.MS2FileChargeIndependentAnalysis"/>
	
	<resultMap class="Ianalysis" id="ianalysisResult">
		<result property="scanId" column="scanID" />
		<result property="header" column="header" />
		<result property="value" column="value" />
	</resultMap>
	
	<parameterMap class="Ianalysis" id="ianalysisParam">
		<parameter property="scanId" jdbcType="INTEGER"/>
		<parameter property="header" jdbcType="VARCHAR"/>
		<parameter property="value" jdbcType="VARCHAR"/>
	</parameterMap>
	
    <select id="selectAnalysisForScan" resultMap="ianalysisResult" parameterClass="Integer"> 
        SELECT * FROM MS2FileChargeIndependentAnalysis where scanID=#id#
    </select> 
    
    <insert id="insert" parameterMap="ianalysisParam">
    	INSERT INTO MS2FileChargeIndependentAnalysis (scanID, header, value) 
    	VALUES (?,?,?)
    </insert>
    
    <delete id="deleteByRunId" parameterClass="Integer">
		DELETE MS2FileChargeIndependentAnalysis 
		FROM MS2FileChargeDependentAnalysis, MsScan
		WHERE MsScan.id = MS2FileChargeDependentAnalysis.scanID
		AND MS2FileChargeDependentAnalysis.runID=#runId#
    </delete>
    
     <delete id="deleteByScanId" parameterClass="Integer">
		DELETE FROM MS2FileChargeIndependentAnalysis WHERE scanId=#scanId#		    
    </delete>
    
    <delete id="deleteByScanIds" parameterClass="java.util.Map">
		DELETE FROM MS2FileChargeIndependentAnalysis WHERE 
		<iterate open="scanID in(" close=")" conjunction=",">
			#scanIdList[]#
		</iterate>
    </delete>
    
</sqlMap>