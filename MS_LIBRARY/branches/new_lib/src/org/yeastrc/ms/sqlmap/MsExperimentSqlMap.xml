<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
      "http://ibatis.apache.org/dtd/sql-map-2.dtd"> 
<sqlMap namespace="MsExperiment"> 

	<typeAlias alias="MsExperiment" type="org.yeastrc.ms.dto.MsExperiment"/>
	
	<resultMap class="MsExperiment" id="msExperimentResult">
		<result property="id" column="id" />
		<result property="date" column="expDate" />
		<result property="serverAddress" column="serverAddress" />
		<result property="serverDirectory" column="serverDirectory" />
	</resultMap>
	
	<parameterMap class="MsExperiment" id="msExperimentParam">
		<parameter property="date" jdbcType="DATE"/>
		<parameter property="serverAddress" jdbcType="VARCHAR"/>
		<parameter property="serverDirectory" jdbcType="VARCHAR"/>
	</parameterMap>
	
    <select id="selectAll" resultClass="Integer"> 
        SELECT id FROM msExperiment
    </select> 
    
    <select id="select" resultMap="msExperimentResult" parameterClass="Integer">
    	SELECT * FROM msExperiment WHERE id= #id#
    </select>
    
    <insert id="insert" parameterMap="msExperimentParam">
    	INSERT INTO msExperiment (expDate, serverAddress, serverDirectory) VALUES (?,?,?)
    	<selectKey resultClass="int" keyProperty="id">
      		select last_insert_id() as id
    	</selectKey>
    </insert>
    
    <delete id="delete" parameterClass="Integer">
		DELETE FROM msExperiment WHERE id=#id#		    
    </delete>
    
    <delete id="deleteAll" parameterClass="Integer">
		DELETE FROM msExperiment	    
    </delete>
    
</sqlMap>