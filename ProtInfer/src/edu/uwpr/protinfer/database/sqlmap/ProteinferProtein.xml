<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
      "http://ibatis.apache.org/dtd/sql-map-2.dtd"> 
<sqlMap namespace="ProteinferProtein"> 

	<typeAlias alias="ProteinferProtein" type="edu.uwpr.protinfer.database.dto.ProteinferProtein" />
	
	<typeAlias alias="UserValidationTypeHandler" 
				type="edu.uwpr.protinfer.database.dao.ProteinferProteinDAO$UserValidationTypeHandler"/>
		
	<resultMap class="ProteinferProtein" id="pinferProteinResult" >
		<result property="id" column="id" />
		<result property="proteinferId" column="pinferID" nullValue="0"/>
		<result property="accession" column="accession" />
		<result property="nrseqProteinId" column="nrseqProteinID" nullValue="0"/>
		<result property="coverage" column="coverage" />
		<result property="clusterId" column="clusterID" nullValue="0"/>
		<result property="isParsimonious" column="isParsimonious" />
		<result property="groupId" column="groupID" nullValue="0"/>
		<result property="userAnnotation" column="userAnnotation"/>
		<result property="userValidation" column="userValidation"
				typeHandler="UserValidationTypeHandler"/>
		<result property="peptides" 
				select="ProteinferPeptide.selectPeptidesForProtein"
				column="id"/>
	</resultMap>
	
	<parameterMap class="ProteinferProtein" id="pinferProteinParam">
		<parameter property="proteinferId" jdbcType="INTEGER" nullValue="0"/>
		<parameter property="accession" jdbcType="VARCHAR" />
		<parameter property="nrseqProteinId" jdbcType="INTEGER" nullValue="0"/>
		<parameter property="coverage" jdbcType="DOUBLE" />
		<parameter property="isParsimonious" jdbcType="BIT" />
		<parameter property="clusterId" jdbcType="INTEGER" nullValue="0"/>
		<parameter property="groupId" jdbcType="INTEGER" nullValue="0"/>
		<parameter property="userAnnotation" jdbcType="TEXT" />
		<parameter property="userValidation" jdbcType="CHAR" typeHandler="UserValidationTypeHandler"/>
	</parameterMap>
	
	<select id="select" resultMap="pinferProteinResult" parameterClass="Integer">
    	SELECT * FROM ProteinferProtein WHERE id=#id#
    </select>
    
    <select id="selectProteinIdsForProteinferRun" resultClass="Integer" parameterClass="Integer">
    	SELECT id FROM ProteinferProtein WHERE pinferID = #id#
    </select>
    
    <select id="selectProteinsForProteinferRun" resultMap="pinferProteinResult" parameterClass="Integer">
    	SELECT * FROM ProteinferProtein WHERE pinferID = #id#
    </select>
    
    <update id="updateUserAnnotation" parameterClass="java.util.Map">
    	UPDATE ProteinferProtein SET userAnnotation=#annotation# where id=#pinferProteinId#
    </update>
    
    <update id="updateUserValidation" parameterClass="java.util.Map">
    	UPDATE ProteinferProtein SET userValidation=#userValidation# where id=#pinferProteinId#
    </update>
    
    <insert id="insert" parameterMap="pinferProteinParam">
    	INSERT INTO ProteinferProtein (
    	pinferID,
    	accession,
    	nrseqProteinID,
    	coverage,
    	isParsimonious,
    	clusterID,
    	groupID,
    	userAnnotation,
    	userValidation) 
    	VALUES (?,?,?,?,?,?,?,?,?)
    	<selectKey resultClass="int">
      		select last_insert_id() as id
    	</selectKey>
    </insert>
    
    <delete id="delete" parameterClass="Integer">
		DELETE FROM ProteinferProtein WHERE id=#id#		    
    </delete>
    
</sqlMap>