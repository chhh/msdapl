<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
      "http://ibatis.apache.org/dtd/sql-map-2.dtd"> 
<sqlMap namespace="ProteinferInput"> 

	<typeAlias alias="ProteinferInput" type="edu.uwpr.protinfer.database.dto.ProteinferInput"/>
	
	<resultMap class="ProteinferInput" id="pinferInputResult">
		<result property="proteinferId" column="pinferID" nullValue="0"/>
		<result property="runSearchId" column="runSearchID" nullValue="0"/>
		<result property="numTargetHits" column="targetHits" nullValue="-1"/>
		<result property="numDecoyHits" column="decoyHits" nullValue="-1"/>
		<result property="numFilteredTargetHits" column="filteredTargetHits" nullValue="-1"/>
	</resultMap>
	
	<parameterMap class="ProteinferInput" id="pinferInputParam">
		<parameter property="proteinferId" jdbcType="INTEGER" nullValue="0"/>
		<parameter property="runSearchId" jdbcType="INTEGER" nullValue="0"/>
		<parameter property="numTargetHits" jdbcType="INTEGER" nullValue="-1" />
		<parameter property="numDecoyHits" jdbcType="INTEGER" nullValue="-1" />
		<parameter property="numFilteredTargetHits" jdbcType="INTEGER" nullValue="-1" />
	</parameterMap>
	
    <select id="selectProteinferInput" resultMap="pinferInputResult" parameterClass="Integer">
    	SELECT * FROM ProteinferInput WHERE pinferID = #id#
    </select>
    
    <insert id="saveProteinferInput" parameterMap="pinferInputParam">
    	INSERT INTO ProteinferInput (
    	pinferID,
    	runSearchID,
    	targetHits,
    	decoyHits,
    	filteredTargetHits)
    	VALUES (?,?,?,?,?)
    </insert>
    
    <insert id="saveProteinferInputList" parameterClass="String">
    	INSERT INTO ProteinferInput (
    	pinferID,
    	runSearchID,
    	targetHits,
    	decoyHits,
    	filteredTargetHits)
    	VALUES $values$
    </insert>
    
    <delete id="delete" parameterClass="Integer">
		DELETE FROM ProteinferInput WHERE pinferID=#id#		    
    </delete>
    
</sqlMap>